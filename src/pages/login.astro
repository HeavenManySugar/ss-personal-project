---
/**
 * User Login Page
 */
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getEnabledProviders } from '../lib/oauth';

const sessionCookie = Astro.cookies.get('session');
if (sessionCookie) {
  return Astro.redirect('/dashboard');
}

// Get enabled OAuth providers
const db = Astro.locals.runtime.env.DB as D1Database;
const oauthProviders = await getEnabledProviders(db);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Sign In - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <style>
      .auth-page {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
      }
      .auth-container {
        max-width: 440px;
        width: 100%;
        background: white;
        padding: 3rem 2.5rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow-lg);
        border: 1px solid rgb(var(--gray-light));
      }
      .auth-header {
        text-align: center;
        margin-bottom: 2rem;
      }
      .auth-header h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: rgb(var(--gray-dark));
      }
      .auth-header p {
        color: rgb(var(--gray));
        font-size: 0.938rem;
        margin: 0;
      }
      .form-group {
        margin-bottom: 1.5rem;
      }
      .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        font-size: 0.938rem;
        color: rgb(var(--gray-dark));
      }
      .form-group input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 1.5px solid rgb(var(--gray-light));
        border-radius: 8px;
        font-size: 1rem;
        box-sizing: border-box;
        transition: var(--transition);
        font-family: inherit;
      }
      .form-group input:focus {
        outline: none;
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
      }
      .btn {
        width: 100%;
        padding: 0.875rem 1rem;
        background: var(--accent);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        font-family: inherit;
      }
      .btn:hover { 
        background: var(--accent-dark);
        transform: translateY(-1px);
        box-shadow: var(--box-shadow);
      }
      .btn:disabled { 
        background: rgb(var(--gray));
        cursor: not-allowed;
        transform: none;
      }
      .message {
        padding: 0.875rem 1rem;
        margin-bottom: 1.5rem;
        border-radius: 8px;
        display: none;
        font-size: 0.938rem;
        line-height: 1.5;
      }
      .message.error { 
        background: rgba(255, 59, 48, 0.1);
        color: var(--error);
        border: 1px solid rgba(255, 59, 48, 0.2);
      }
      .message.success { 
        background: rgba(52, 199, 89, 0.1);
        color: var(--success);
        border: 1px solid rgba(52, 199, 89, 0.2);
      }
      .message.show { display: block; }
      .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgb(var(--gray-light));
      }
      .auth-footer p {
        color: rgb(var(--gray));
        font-size: 0.938rem;
        margin: 0;
      }
      .auth-footer a {
        color: var(--accent);
        text-decoration: none;
        font-weight: 600;
      }
      .auth-footer a:hover {
        text-decoration: underline;
      }
      .oauth-section {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgb(var(--gray-light));
      }
      .oauth-header {
        text-align: center;
        margin-bottom: 1rem;
        color: rgb(var(--gray));
        font-size: 0.875rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      .oauth-providers {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }
      .oauth-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        width: 100%;
        padding: 0.875rem 1rem;
        background: white;
        color: rgb(var(--gray-dark));
        border: 1.5px solid rgb(var(--gray-light));
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        font-family: inherit;
        text-decoration: none;
      }
      .oauth-btn:hover {
        background: rgb(var(--gray-bg));
        border-color: rgb(var(--gray));
        transform: translateY(-1px);
        box-shadow: var(--box-shadow);
      }
      .oauth-btn img {
        width: 20px;
        height: 20px;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="auth-page">
        <div class="auth-container">
          <div class="auth-header">
            <h1>Welcome Back</h1>
            <p>Sign in to your account to continue</p>
          </div>
          <div id="message" class="message"></div>
          <form id="loginForm">
            <div class="form-group">
              <label for="username">Username</label>
              <input type="text" id="username" required autocomplete="username" placeholder="Enter your username" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="password" required autocomplete="current-password" placeholder="Enter your password" />
            </div>
            <button type="submit" class="btn" id="submitBtn">Sign In</button>
          </form>

          {oauthProviders.length > 0 && (
            <div class="oauth-section">
              <div class="oauth-header">Or continue with</div>
              <div class="oauth-providers">
                {oauthProviders.map((provider) => (
                  <a href={`/api/oauth/${provider.name}/authorize`} class="oauth-btn">
                    {provider.icon_url && <img src={provider.icon_url} alt={provider.display_name} />}
                    <span>{provider.display_name}</span>
                  </a>
                ))}
              </div>
            </div>
          )}

          <div class="auth-footer">
            <p>Don't have an account? <a href="/register">Create one now</a></p>
          </div>
        </div>
      </div>
    </main>
    <Footer />

    <script>
      const form = document.getElementById('loginForm') as HTMLFormElement;
      const messageDiv = document.getElementById('message') as HTMLDivElement;
      const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

      function showMessage(text: string, type: 'error' | 'success') {
        messageDiv.textContent = text;
        messageDiv.className = `message ${type} show`;
      }

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const username = (document.getElementById('username') as HTMLInputElement).value;
        const password = (document.getElementById('password') as HTMLInputElement).value;

        submitBtn.disabled = true;
        submitBtn.textContent = 'Logging in...';

        try {
          const response = await fetch('/api/auth/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password })
          });

          const data = await response.json() as { success: boolean; message: string; requiresMFA?: boolean };

          if (data.success) {
            if (data.requiresMFA) {
              sessionStorage.setItem('mfa_username', username);
              window.location.href = '/verify-mfa';
            } else {
              window.location.href = '/dashboard';
            }
          } else {
            showMessage(data.message, 'error');
            submitBtn.disabled = false;
            submitBtn.textContent = 'Login';
          }
        } catch (error) {
          showMessage('Network error', 'error');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Login';
        }
      });
    </script>
  </body>
</html>
