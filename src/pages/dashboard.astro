---
/**
 * User Dashboard
 * Protected page - requires authentication
 */
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { getSessionFromCookie, validateSession } from '../lib/session';

const db = Astro.locals.runtime.env.DB as D1Database;
const sessionId = getSessionFromCookie(Astro.request);

if (!sessionId) {
  return Astro.redirect('/login');
}

const session = await validateSession(db, sessionId);
if (!session) {
  return Astro.redirect('/login');
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Dashboard - ${SITE_TITLE}`} description="User Dashboard" />
    <style>
      .dashboard {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }
      .welcome-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2.5rem 2rem;
        border-radius: var(--border-radius);
        margin-bottom: 2rem;
        box-shadow: var(--box-shadow-lg);
      }
      .welcome-banner h1 {
        margin: 0 0 0.5rem 0;
        font-size: 2rem;
        color: white;
      }
      .welcome-banner p {
        margin: 0;
        opacity: 0.95;
        font-size: 1.125rem;
      }
      .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
      }
      .card {
        background: white;
        padding: 2rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        border: 1px solid rgb(var(--gray-light));
        transition: var(--transition);
      }
      .card:hover {
        box-shadow: var(--box-shadow-lg);
      }
      .card h2 {
        margin: 0 0 1.5rem 0;
        color: rgb(var(--gray-dark));
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .info-row {
        display: flex;
        justify-content: space-between;
        padding: 0.875rem 0;
        border-bottom: 1px solid rgb(var(--gray-light));
      }
      .info-row:last-child {
        border-bottom: none;
      }
      .info-label {
        font-weight: 600;
        color: rgb(var(--gray));
        font-size: 0.938rem;
      }
      .info-value {
        color: rgb(var(--gray-dark));
        font-weight: 500;
      }
      .btn {
        padding: 0.875rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        font-size: 1rem;
        transition: var(--transition);
        font-family: inherit;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
      }
      .btn-primary {
        background: var(--success);
        color: white;
      }
      .btn-primary:hover {
        background: #28a745;
        transform: translateY(-1px);
        box-shadow: var(--box-shadow);
      }
      .btn-danger {
        background: var(--error);
        color: white;
      }
      .btn-danger:hover {
        background: #e32b1f;
        transform: translateY(-1px);
        box-shadow: var(--box-shadow);
      }
      .btn-secondary {
        background: var(--accent);
        color: white;
      }
      .btn-secondary:hover {
        background: var(--accent-dark);
        transform: translateY(-1px);
        box-shadow: var(--box-shadow);
      }
      .mfa-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.875rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
      }
      .mfa-enabled {
        background: rgba(52, 199, 89, 0.15);
        color: var(--success);
      }
      .mfa-disabled {
        background: rgba(255, 149, 0, 0.15);
        color: var(--warning);
      }
      .qr-section {
        text-align: center;
        padding: 2rem 1rem;
        background: rgb(var(--gray-light));
        border-radius: 8px;
        margin: 1.5rem 0;
      }
      .qr-section img {
        max-width: 240px;
        border: 3px solid white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
      }
      .qr-manual {
        margin-top: 1rem;
        padding: 0.75rem;
        background: white;
        border-radius: 8px;
        font-family: monospace;
        font-size: 0.875rem;
        word-break: break-all;
      }
      .message {
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        border-radius: 8px;
        display: none;
        font-size: 0.938rem;
      }
      .message.error {
        background: rgba(255, 59, 48, 0.1);
        color: var(--error);
        border: 1px solid rgba(255, 59, 48, 0.2);
      }
      .message.success {
        background: rgba(52, 199, 89, 0.1);
        color: var(--success);
        border: 1px solid rgba(52, 199, 89, 0.2);
      }
      .message.show { display: block; }
      #mfaSetup { display: none; }
      .mfa-instructions {
        background: rgb(var(--gray-light));
        padding: 1.5rem;
        border-radius: 8px;
        margin: 1.5rem 0;
      }
      .mfa-instructions ol {
        margin: 0.5rem 0 0 1.25rem;
        padding: 0;
      }
      .mfa-instructions li {
        margin: 0.5rem 0;
        line-height: 1.6;
      }
      .code-input-group {
        max-width: 300px;
        margin: 1.5rem auto;
      }
      .code-input-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        font-size: 0.938rem;
        text-align: center;
      }
      .code-input-group input {
        width: 100%;
        padding: 1rem;
        text-align: center;
        font-size: 1.75rem;
        letter-spacing: 0.5rem;
        border: 2px solid rgb(var(--gray-light));
        border-radius: 8px;
        font-family: monospace;
        box-sizing: border-box;
      }
      .code-input-group input:focus {
        outline: none;
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
      }
      .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="dashboard">
        <div class="welcome-banner">
          <h1>Welcome back, {session.username}!</h1>
          <p>Manage your account security and settings</p>
        </div>

        <div id="message" class="message"></div>

        <div class="dashboard-grid">
          <div class="card">
            <h2>üë§ Account Details</h2>
            <div>
              <div class="info-row">
                <span class="info-label">Username</span>
                <span class="info-value">{session.username}</span>
              </div>
              <div class="info-row">
                <span class="info-label">Email</span>
                <span class="info-value">{session.email}</span>
              </div>
              <div class="info-row">
                <span class="info-label">2FA Status</span>
                <span class="info-value">
                  {session.mfaEnabled ? (
                    <span class="mfa-badge mfa-enabled">
                      <span>‚úì</span>
                      <span>Enabled</span>
                    </span>
                  ) : (
                    <span class="mfa-badge mfa-disabled">
                      <span>‚ö†</span>
                      <span>Disabled</span>
                    </span>
                  )}
                </span>
              </div>
            </div>
          </div>

          <div class="card">
            <h2>üîê Quick Actions</h2>
            <div class="action-buttons">
              {session.mfaEnabled ? (
                <button class="btn btn-danger" id="disableMfaBtn">
                  <span>Disable 2FA</span>
                </button>
              ) : (
                <button class="btn btn-primary" id="enableMfaBtn">
                  <span>Enable 2FA</span>
                </button>
              )}
              <button class="btn btn-secondary" id="logoutBtn">
                <span>Sign Out</span>
              </button>
            </div>
          </div>
        </div>

        <div class="card" style="grid-column: 1 / -1;">
          <h2>üì± Two-Factor Authentication</h2>
          <p style="color: rgb(var(--gray)); margin-bottom: 1rem;">
            Protect your account with an extra layer of security. When enabled, you'll need 
            to enter a code from your authenticator app each time you sign in.
          </p>

          <div id="mfaSetup">
            <div class="mfa-instructions">
              <h3 style="margin-top: 0; font-size: 1.125rem;">Setup Instructions</h3>
              <ol>
                <li>Download an authenticator app (Google Authenticator, Authy, 1Password, etc.)</li>
                <li>Scan the QR code below with your app</li>
                <li>Enter the 6-digit verification code to complete setup</li>
              </ol>
            </div>
            
            <div class="qr-section" id="qrCodeContainer"></div>
            
            <div class="code-input-group">
              <label for="mfaCode">Verification Code</label>
              <input 
                type="text" 
                id="mfaCode" 
                maxlength="6"
                pattern="\d{6}"
                placeholder="000000"
                inputmode="numeric"
              />
            </div>
            
            <div style="text-align: center;">
              <button class="btn btn-primary" id="verifyMfaBtn">
                <span>Verify & Enable 2FA</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </main>
    <Footer />

    <script define:vars={{ mfaEnabled: session.mfaEnabled }}>
      const messageDiv = document.getElementById('message');
      const enableMfaBtn = document.getElementById('enableMfaBtn');
      const disableMfaBtn = document.getElementById('disableMfaBtn');
      const logoutBtn = document.getElementById('logoutBtn');
      const mfaSetup = document.getElementById('mfaSetup');
      const verifyMfaBtn = document.getElementById('verifyMfaBtn');
      const mfaCodeInput = document.getElementById('mfaCode');
      const qrCodeContainer = document.getElementById('qrCodeContainer');

      function showMessage(text, type) {
        messageDiv.textContent = text;
        messageDiv.className = `message ${type} show`;
        setTimeout(() => messageDiv.className = 'message', 5000);
      }

      if (enableMfaBtn) {
        enableMfaBtn.addEventListener('click', async () => {
          try {
            const response = await fetch('/api/auth/setup-mfa', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ action: 'generate' })
            });

            const data = await response.json();
            if (data.success) {
              mfaSetup.style.display = 'block';
              qrCodeContainer.innerHTML = `
                <img src="${data.mfaSetup.qrCodeUrl}" alt="QR Code" />
                <p style="margin-top: 1rem;">Or enter manually: <code>${data.mfaSetup.manualEntryKey}</code></p>
              `;
            } else {
              showMessage(data.message, 'error');
            }
          } catch (error) {
            showMessage('Failed to setup MFA', 'error');
          }
        });
      }

      if (verifyMfaBtn) {
        verifyMfaBtn.addEventListener('click', async () => {
          const code = mfaCodeInput.value;
          if (!/^\d{6}$/.test(code)) {
            showMessage('Please enter a 6-digit code', 'error');
            return;
          }

          try {
            const response = await fetch('/api/auth/setup-mfa', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ action: 'verify', code })
            });

            const data = await response.json();
            if (data.success) {
              showMessage('MFA enabled successfully!', 'success');
              setTimeout(() => location.reload(), 1500);
            } else {
              showMessage(data.message, 'error');
            }
          } catch (error) {
            showMessage('Failed to verify MFA', 'error');
          }
        });
      }

      if (disableMfaBtn) {
        disableMfaBtn.addEventListener('click', async () => {
          if (!confirm('Are you sure you want to disable MFA?')) return;

          try {
            const response = await fetch('/api/auth/setup-mfa', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ action: 'disable' })
            });

            const data = await response.json();
            if (data.success) {
              showMessage('MFA disabled', 'success');
              setTimeout(() => location.reload(), 1500);
            } else {
              showMessage(data.message, 'error');
            }
          } catch (error) {
            showMessage('Failed to disable MFA', 'error');
          }
        });
      }

      logoutBtn.addEventListener('click', async () => {
        try {
          await fetch('/api/auth/logout', { method: 'POST' });
          window.location.href = '/login';
        } catch (error) {
          showMessage('Logout failed', 'error');
        }
      });
    </script>
  </body>
</html>
