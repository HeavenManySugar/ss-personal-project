---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Check if user is logged in
const sessionCookie = Astro.cookies.get('session');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero-section {
				min-height: 70vh;
				display: flex;
				align-items: center;
				justify-content: center;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				padding: 4rem 2rem;
				margin: -3rem -2rem 4rem;
			}
			@media (max-width: 768px) {
				.hero-section {
					margin: -2rem -1.5rem 3rem;
					padding: 3rem 1.5rem;
					min-height: 60vh;
				}
			}
			.hero-content {
				max-width: 800px;
				text-align: center;
			}
			.hero-title {
				font-size: 3.5rem;
				font-weight: 700;
				margin-bottom: 1.5rem;
				letter-spacing: -0.03em;
				line-height: 1.1;
			}
			@media (max-width: 768px) {
				.hero-title {
					font-size: 2.5rem;
				}
			}
			.hero-subtitle {
				font-size: 1.5rem;
				margin-bottom: 3rem;
				opacity: 0.95;
				font-weight: 400;
				line-height: 1.5;
			}
			@media (max-width: 768px) {
				.hero-subtitle {
					font-size: 1.25rem;
				}
			}
			.cta-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}
			.btn {
				padding: 1rem 2.5rem;
				font-size: 1.125rem;
				font-weight: 600;
				border: none;
				border-radius: var(--border-radius);
				cursor: pointer;
				text-decoration: none;
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				transition: var(--transition);
				box-shadow: var(--box-shadow);
			}
			.btn:hover {
				transform: translateY(-2px);
				box-shadow: var(--box-shadow-lg);
			}
			.btn-primary {
				background: white;
				color: #667eea;
			}
			.btn-secondary {
				background: rgba(255,255,255,0.15);
				color: white;
				border: 2px solid rgba(255,255,255,0.8);
				backdrop-filter: blur(10px);
			}
			.features-section {
				max-width: 1200px;
				margin: 5rem auto;
				padding: 0 2rem;
			}
			.section-title {
				text-align: center;
				margin-bottom: 3rem;
				font-size: 2.5rem;
				color: rgb(var(--gray-dark));
			}
			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
			}
			.feature-card {
				background: white;
				padding: 2rem;
				border-radius: var(--border-radius);
				box-shadow: var(--box-shadow);
				transition: var(--transition);
				border: 1px solid rgba(var(--gray-light), 0.5);
			}
			.feature-card:hover {
				transform: translateY(-4px);
				box-shadow: var(--box-shadow-lg);
			}
			.feature-icon {
				font-size: 3rem;
				margin-bottom: 1rem;
				display: block;
			}
			.feature-card h3 {
				margin: 0 0 1rem 0;
				color: #667eea;
				font-size: 1.5rem;
			}
			.feature-card p {
				color: rgb(var(--gray));
				line-height: 1.7;
				margin: 0;
			}
			.stats-section {
				background: rgb(var(--gray-light));
				padding: 4rem 2rem;
				margin: 5rem -2rem;
			}
			@media (max-width: 768px) {
				.stats-section {
					margin: 3rem -1.5rem;
				}
			}
			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 3rem;
				max-width: 1000px;
				margin: 0 auto;
				text-align: center;
			}
			.stat-item h3 {
				font-size: 3rem;
				color: #667eea;
				margin: 0 0 0.5rem 0;
				font-weight: 700;
			}
			.stat-item p {
				color: rgb(var(--gray));
				font-size: 1.125rem;
				margin: 0;
			}
			.cta-section {
				text-align: center;
				max-width: 800px;
				margin: 5rem auto;
				padding: 3rem 2rem;
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
				border-radius: var(--border-radius);
			}
			.cta-section h2 {
				font-size: 2rem;
				margin-bottom: 1rem;
			}
			.cta-section p {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				margin-bottom: 2rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="hero-section">
				<div class="hero-content">
					<h1 class="hero-title">Enterprise Authentication, Simplified</h1>
					<p class="hero-subtitle">
						Secure your applications with modern authentication solutions. 
						Built for developers, trusted by enterprises.
					</p>
					<div class="cta-buttons">
						{sessionCookie ? (
							<a href="/dashboard" class="btn btn-primary">
								<span>Go to Dashboard</span>
								<span>‚Üí</span>
							</a>
						) : (
							<>
								<a href="/register" class="btn btn-primary">
									<span>Get Started Free</span>
								</a>
								<a href="/login" class="btn btn-secondary">
									<span>Sign In</span>
								</a>
							</>
						)}
					</div>
				</div>
			</div>

			<div class="features-section">
				<h2 class="section-title">Why Choose SecureAuth?</h2>
				<div class="features-grid">
					<div class="feature-card">
						<span class="feature-icon">üîê</span>
						<h3>Military-Grade Encryption</h3>
						<p>
							PBKDF2 password hashing with 100,000 iterations and unique salts. 
							Your data is protected with industry-leading security standards.
						</p>
					</div>

					<div class="feature-card">
						<span class="feature-icon">üì±</span>
						<h3>Multi-Factor Authentication</h3>
						<p>
							TOTP-based 2FA compatible with Google Authenticator and other 
							authentication apps. Add an extra layer of security to every account.
						</p>
					</div>

					<div class="feature-card">
						<span class="feature-icon">‚ö°</span>
						<h3>Lightning Fast</h3>
						<p>
							Built on Cloudflare's global edge network. Experience sub-50ms 
							authentication responses from anywhere in the world.
						</p>
					</div>

					<div class="feature-card">
						<span class="feature-icon">üõ°Ô∏è</span>
						<h3>Attack Prevention</h3>
						<p>
							Comprehensive protection against SQL injection, XSS, CSRF, and 
							brute-force attacks. Sleep well knowing your users are protected.
						</p>
					</div>

					<div class="feature-card">
						<span class="feature-icon">üìä</span>
						<h3>Real-Time Monitoring</h3>
						<p>
							Track login attempts, failed authentications, and suspicious activity 
							in real-time. Stay informed with detailed audit logs.
						</p>
					</div>

					<div class="feature-card">
						<span class="feature-icon">üöÄ</span>
						<h3>Developer Friendly</h3>
						<p>
							Clean APIs, comprehensive documentation, and SDKs for popular 
							languages. Integrate authentication in minutes, not days.
						</p>
					</div>
				</div>
			</div>

			<div class="stats-section">
				<div class="stats-grid">
					<div class="stat-item">
						<h3>99.99%</h3>
						<p>Uptime Guarantee</p>
					</div>
					<div class="stat-item">
						<h3>&lt;50ms</h3>
						<p>Average Response Time</p>
					</div>
					<div class="stat-item">
						<h3>256-bit</h3>
						<p>Encryption Standard</p>
					</div>
					<div class="stat-item">
						<h3>24/7</h3>
						<p>Security Monitoring</p>
					</div>
				</div>
			</div>

			<div class="cta-section">
				<h2>Ready to Get Started?</h2>
				<p>Join thousands of developers building secure applications</p>
				<div class="cta-buttons">
					{!sessionCookie && (
						<>
							<a href="/register" class="btn btn-primary">Create Free Account</a>
							<a href="/blog" class="btn btn-secondary">Learn More</a>
						</>
					)}
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
